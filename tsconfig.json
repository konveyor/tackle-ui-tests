{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es5", "dom", "es2015"],
        "types": [
            "cypress",
            "cypress-xpath",
            "@testing-library/cypress",
            "cypress-react-selector",
            "node"
        ],
        "skipLibCheck": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "sourceMap": true,
    },
    "typedocOptions": {
        "entryPoints": ["cypress/integration"],
        "out": "docs"
    },
    "include": [
        "**/*.ts",
        "**/*.js",
        "../node_modules/dom-accessibility-api/dist/polyfills/SetLike.d.ts"
    ],
    "exclude": ["../node_modules"]
}
